<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:notice] %>
	<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:alert] %>
	<p id="alert"><%= flash[:alert] %></p>
	<% end %>
<%= yield %>
	<p class="userinfo">
	<% if current_customer %>
	Signed in as <%=current_customer.name %>.<%= link_to "Log out", session_path("current"), method: :delete %>
	<% else %>
	<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_customer_path %>
	<% end %>
	</p>


</body>
</html>
